apiVersion: v1
kind: Pod
metadata:
  name: pod-spec-cc
spec:
  runtimeClassName: $RUNTIMECLASSNAME
  containers:
    - name: $IMAGE
      image: $REGISTRTYIMAGE
      imagePullPolicy: Always
      resources:
        limits:
          cpu: "${LIMITCPU}"
          memory: "${LIMITMEM}Gi"
        requests:
          cpu: "${REQUESTCPU}"
          memory: "${REQUESTMEM}Gi"
